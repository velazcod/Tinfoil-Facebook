<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="Theme.Tinfoil" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:background">@null</item>
    </style>

    <!-- Base Preferences theme -->
    <style name="AppBasePreferencesTheme" parent="android:Theme.Light">
    </style>

    <!-- Preferences theme -->
    <style name="Theme.Tinfoil.Preferences" parent="AppBasePreferencesTheme">
    </style>

    <!-- Custom style used for the top ProgressBar -->
    <style name="Widget.Tinfoil.ProgressBar" parent="android:Widget.Holo.ProgressBar.Horizontal">
    </style>

    <style name="MenuDrawerTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/navigation_drawer_items_text_size</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:typeface">sans</item>
    </style>

</resources>
